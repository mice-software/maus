CC = g++
CFLAGS = -g -DDEBUG -ggdb -Wall

all : emittance_recon_example

emittance_recon_example : emittance_recon_example.cc
	$(CC) $(CFLAGS) $< -o $@ \
	                      -I${MAUS_ROOT_DIR}/ \
	                      -I${MAUS_ROOT_DIR}/src/common_cpp \
	                      -I${MAUS_ROOT_DIR}/src/legacy \
	                      -I${MAUS_THIRD_PARTY}/third_party/install/include \
	                      -I${ROOTSYS}/include \
	                      -L${MAUS_ROOT_DIR}/build/ \
	                      `root-config --ldflags` \
	                      `${ROOTSYS}/bin/root-config --glibs` \
	                      -lMausCpp \
	                       -Wl,--no-as-needed
	
clean:
	rm emittance_recon_example

