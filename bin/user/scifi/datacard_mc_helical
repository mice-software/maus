# Some initial setup
#------------------------------------------
type_of_dataflow = 'pipeline_single_thread'
verbose_level = 0 # 0 = debug info (and std::cout), 1 = run info, 2 = warnings # 3 = errors (and std::cerr), 4 = fatal, >4 = silent
